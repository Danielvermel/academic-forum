<div id="book" v-cloak>

  <section class="wrapper">
    <div class="container">
       
        <ol class="breadcrumb bg-light px-0 mt-2">
          <li class="breadcrumb-item"><a href="/books">Books</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{book[0].title.slice(0, 25) }}<span v-if="book[0].title.length > 25">...</span></li>
        </ol>

        
        <div class="row">
          <record class="col-7"   :data="book"></record>
          <comments class="col-5" :data="book"></comments>
        </div>

    </div>
  </section>

</div>
