<div id="booklist" v-cloak>

  <section class="wrapper">
    <div class="container">
      <header class="mt-5 d-flex justify-content-between">
        <h4>List of Books</h4>
        <select class="custom-select" v-model="sortedOption" @change="sortedList(sortedOption)">
          <option value="default" disabled >Sort by:</option>
          <option value="dateUp"> Date (Asc)</option>
          <option value="dateDown"> Date (Desc)</option>
          <option value="nameUp">Name (Asc)</option>
          <option value="nameDown">Name (Desc)</option>
        </select>
      </header>

        <div class="row">
            <card v-for="data in books" :url="'books'":data="data"/>
        </div>
    </div>
  </section>


</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
